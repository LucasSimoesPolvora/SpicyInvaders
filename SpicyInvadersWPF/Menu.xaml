<Window x:Class="SpicyInvadersWPF.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpicyInvadersWPF"
        mc:Ignorable="d"
        Title="Menu" Height="1080" Width="1920">
    <Grid Margin="0,0,0,-6">
        <Grid Background="Black">
            <Button Name="play" Foreground="#FF0DF205" Background="#00000000" FontSize="80" HorizontalAlignment="Center" Margin="0,450,0,500" Click="play_Click">Play</Button>
            <Button Name="Highscore" Foreground="#FF0DF205" Background="#00000000" FontSize="80" HorizontalAlignment="Center" Margin="0,600,0,350" Click="Highscore_Click">Highscore</Button>
            <Button Name="Help" Foreground="#FF0DF205" Background="#00000000" FontSize="80" HorizontalAlignment="Center" Margin="0,750,0,200" Click="Help_Click">Help</Button>
            <Button Name="Quit" Foreground="#FF0DF205" Background="#00000000" FontSize="80" HorizontalAlignment="Center" Margin="0,900,0,50" Click="Quit_Click">Quit</Button>
        </Grid>
    </Grid>
</Window>
